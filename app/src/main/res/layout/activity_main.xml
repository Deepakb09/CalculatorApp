<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".view.activity.MainActivity">

    <EditText
            android:id="@+id/etFirstNo"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:hint="Enter First No."
            android:layout_marginTop="10dp"
            android:inputType="number"
            android:layout_marginLeft="10dp"/>

    <EditText
            android:id="@+id/etSecNo"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:hint="Enter Second No."
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"/>

    <EditText
            android:id="@+id/etSymbol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Enter Symbol"
            android:layout_marginTop="5dp"
            android:visibility="gone"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">

        <Button
                android:id="@+id/btAdd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="+"/>

        <Button
                android:id="@+id/btSubtract"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="-"/>

        <Button
                android:id="@+id/btMultiply"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="*"/>

        <Button
                android:id="@+id/btDivide"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="/"/>

    </LinearLayout>

    <TextView
            android:id="@+id/tvResult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Result"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"/>

    <Button
            android:id="@+id/btNextScreen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Next"/>

    <Button
            android:id="@+id/btNextModule"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Next Module"/>

</LinearLayout>